# ========== OPTION 1: OpenAI ==========
OPENAI_API_KEY=sk-your-openai-api-key-here

# ========== OPTION 2: Google Gemini (RECOMMANDÉ) ==========
GOOGLE_API_KEY=your-google-api-key-here

# ========== CHOIX DU PROVIDER ==========
# Options: openai, gemini
LLM_PROVIDER=gemini

# Modèle à utiliser
# Pour OpenAI: gpt-4, gpt-3.5-turbo, gpt-4-turbo
# Pour Gemini: gemini-1.5-flash, gemini-1.5-pro, gemini-2.0-flash
LLM_MODEL=gemini-2.0-flash

# Alternative: Ollama (local, gratuit)
OLLAMA_BASE_URL=http://localhost:11434


# Mode debug (True/False)
DEBUG=False

# Langchain tracing (optionnel)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your-langchain-api-key-here

